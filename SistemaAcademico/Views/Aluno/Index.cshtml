@model IEnumerable<SistemaAcademico.Entidades.Aluno>



<table class="table table-bordered text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Turma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.ActionLink("Nome", "Index", "Aluno", new { @sortOrder = 0 }, null)
        </th>
        <th>
            @Html.ActionLink("Status", "Index", "Aluno", new { @sortOrder = 1 }, null)
        </th>
        <th>
            @Html.ActionLink("Avaliação 1", "Index", "Aluno", new { @sortOrder = 2 }, null)
        </th>
        <th>
            @Html.ActionLink("Avaliação 2", "Index", "Aluno", new { @sortOrder = 3 }, null)
        </th>
        <th>
            @Html.ActionLink("Avaliação 3", "Index", "Aluno", new { @sortOrder = 4}, null)
        </th>
        <th>
            @Html.ActionLink("Avaliação Final", "Index", "Aluno", new { @sortOrder = 5 }, null)
        </th>
        <th>
            @Html.ActionLink("Média", "Index", "Aluno", new { @sortOrder = 6 }, null)
        </th>
        <th>
            @Html.ActionLink("Média c/ Avaliação Final", "Index", "Aluno", new { @sortOrder = 7 }, null)
        </th>
        <th>
            @Html.ActionLink("Avaliação da Competição", "Index", "Aluno", new { @sortOrder = 8 }, null)
        </th>
        <th>
            @Html.ActionLink("Média da Competição", "Index", "Aluno", new { @sortOrder = 9 }, null)
        </th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Turma.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            @if (item.Status == SistemaAcademico.Entidades.Aluno._Status.Reprovado)
            {
                <td class="table-danger">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            }
            else if (item.Status == SistemaAcademico.Entidades.Aluno._Status.ProvaFinal)
            {
                <td class="table-warning">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            }
            else
            {
                <td class="table-success">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.Nota1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotaFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaPonderada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaPonderadaEProvaFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProvaEspecial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaCompeticao)
            </td>

        </tr>
    }

</table>
